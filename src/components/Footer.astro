---
// src/components/Footer.astro
const currentYear = new Date().getFullYear();
const linkedInUrl = "https://www.linkedin.com/company/impactful-places-placeholder"; // Placeholder URL
---
<footer class="bg-gray-100 border-t border-gray-200 mt-auto"> {/* mt-auto for sticky footer with flex body */}
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-8 md:py-10">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="text-sm text-center md:text-left text-gray-600">
        &copy; {currentYear} Impactful Places. All Rights Reserved.
      </div>
      
      <nav class="flex flex-wrap justify-center md:justify-end items-center gap-x-6 gap-y-2 text-sm">
        <a href="/privacy-policy" class="text-gray-600 hover:text-brand-accent focus:outline-none focus-visible:text-brand-accent focus-visible:underline transition-colors duration-150 ease-in-out">
          Privacy Policy
        </a>
        <a href="/terms-of-service" class="text-gray-600 hover:text-brand-accent focus:outline-none focus-visible:text-brand-accent focus-visible:underline transition-colors duration-150 ease-in-out">
          Terms of Service
        </a>
        <a 
          href={linkedInUrl}
          target="_blank" 
          rel="noopener noreferrer" 
          class="text-gray-600 hover:text-brand-accent focus:outline-none focus-visible:text-brand-accent focus-visible:underline transition-colors duration-150 ease-in-out flex items-center"
          aria-label="Impactful Places on LinkedIn"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-1.5" fill="currentColor" viewBox="0 0 24 24" aria-hidden="true">
            <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
          </svg>
          LinkedIn
        </a>
      </nav>
    </div>
  </div>
</footer>
