---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/Button.astro';
import { Image } from 'astro:assets'; // For optimized images

// Hero background image - ensure this path is correct relative to src/
import heroImageSrc from '../assets/images/ashleigh-joy-photography-3iNVxuf-pgo-unsplash.jpg';
import headshotImageSrc from '../assets/images/headshot.jpg';
import esgStrategyImageSrc from '../assets/images/chuttersnap-IfmqOuOkaOA-unsplash.jpg';
import socialImpactTrainingImageSrc from '../assets/images/isaac-smith-CbXmEkOrzSg-unsplash.jpg';
import stakeholderEngagementImageSrc from '../assets/images/samuel-regan-asante-UNaJm-JG4u0-unsplash.jpg';

const pageTitle = "Impactful Places | Driving Sustainable Impact in Real Estate";
const pageDescription = "Impactful Places is an independent ESG consultancy specialising in the built environment, supporting responsible business delivery and sustainable impact through ESG strategy, design, and communication.";

const services = [
  { name: "ESG Strategy", description: "Developing new or revitalising existing ESG strategies with rigour.", link: "/services#esg-strategy", image: esgStrategyImageSrc, alt: "Lush green rooftop garden representing ESG strategy" },
  { name: "Social Impact Training", description: "Introducing social impact to build team confidence and capability.", link: "/services#social-impact-training", image: socialImpactTrainingImageSrc, alt: "Diverse group of people collaborating in a workshop" },
  { name: "Stakeholder Engagement", description: "Gain authentic insights and nurture quality relationships.", link: "/services#stakeholder-engagement", image: stakeholderEngagementImageSrc, alt: "Two people engaged in a meaningful conversation outdoors" },
];
---
<MainLayout title={pageTitle} description={pageDescription}>
  {/* Hero Section */}
  <section class="relative bg-hero-green text-white py-20 md:py-32 min-h-[60vh] md:min-h-[70vh] flex items-center">
    <Image 
      src={heroImageSrc} 
      alt="Abstract image representing sustainable impact in architecture" 
      class="absolute inset-0 w-full h-full object-cover opacity-50"
      widths={[768, 1024, 1920]}
      sizes="(max-width: 768px) 100vw, (max-width: 1024px) 100vw, 1920px"
      loading="eager"
    />
    <div class="relative container mx-auto px-4 sm:px-6 lg:px-8 text-center z-10 animate-on-scroll">
      <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold font-heading mb-6 text-shadow-md">
        Driving Sustainable Impact in Real Estate
      </h1>
      <p class="text-lg sm:text-xl md:text-2xl max-w-3xl mx-auto mb-10 text-on-dark/90">
        Impactful Places is an independent ESG consultancy specialising in the built environment, supporting responsible business delivery and sustainable impact.
      </p>
      <Button href="/services" variant="primary" size="lg">
        Discover Our Services
      </Button>
    </div>
  </section>

  {/* Why ESG in Real Estate? Section */}
  <section class="py-10 md:py-16 bg-bg-light animate-on-scroll">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="max-w-3xl mx-auto text-center mb-12 md:mb-16">
        <h2 class="text-3xl md:text-4xl font-bold font-heading text-brand-green mb-4">ESG in the Real Estate Industry</h2>
        <p class="text-lg text-text-primary/80">
          Real estate has an intimate relationship with place and people. Our activity significantly influences planetary sustainability and quality of life.
        </p>
      </div>
      <div class="max-w-4xl mx-auto space-y-6 text-text-primary/90 text-base md:text-lg leading-relaxed">
        <p>
          Investors, consumers, clients, and employees increasingly expect a responsible approach to businessâ€”one that delivers financial returns while responding to global challenges and pressing local needs.
        </p>
        <p>
          Today's real estate businesses are required to map, track, and quantify each element of E, S, and G with equal rigour and energy, embedding these outcomes into mainstream corporate strategy to build resilience and create long-term value.
        </p>
      </div>
    </div>
  </section>

  {/* Our Expertise Snippet Section */}
  <section class="py-10 md:py-16 bg-gray-50 animate-on-scroll"> {/* Slightly different background for separation */}
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12 md:mb-16">
        <h2 class="text-3xl md:text-4xl font-bold font-heading text-brand-green mb-4">Our Core Services</h2>
        <p class="text-lg text-text-primary/80 max-w-2xl mx-auto">
          We provide expert guidance across a range of responsible business practices to help you achieve your ESG goals.
        </p>
      </div>
      <div class="grid md:grid-cols-3 gap-8">
        {services.map((service, index) => (
          <div class="bg-white rounded-lg shadow-lg text-center hover:shadow-xl transition-shadow duration-300 flex flex-col animate-on-scroll" style={`transition-delay: ${index * 100}ms`}>
            <div class="w-full h-48 rounded-t-lg overflow-hidden">
              <Image 
                src={service.image} 
                alt={service.alt}
                class="w-full h-full object-cover"
                widths={[300, 600]}
                sizes="(max-width: 768px) 90vw, (max-width: 1024px) 30vw, 300px"
              />
            </div>
            <div class="p-8 flex flex-col flex-grow">
              <h3 class="text-xl font-bold font-heading text-brand-green mb-3">{service.name}</h3>
              <p class="text-text-primary/80 text-sm mb-4 flex-grow">{service.description}</p>
              <Button href={service.link} variant="secondary" size="sm">Learn More</Button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Meet Our Founder Snippet Section */}
  <section class="py-10 md:py-16 bg-bg-light animate-on-scroll">
    <div class="container mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-6 md:mb-8">
        <h2 class="text-3xl md:text-4xl font-bold font-heading text-brand-green mb-4">Leadership</h2>
      </div>
      <div class="flex flex-col md:flex-row items-center md:space-x-12 max-w-4xl mx-auto">
        <div class="md:w-1/3 mb-8 md:mb-0 flex-shrink-0">
          <Image 
            src={headshotImageSrc} 
            alt="Vivienne King, Founder of Impactful Places" 
            class="w-48 h-48 sm:w-56 sm:h-56 md:w-64 md:h-64 mx-auto rounded-full object-cover shadow-lg"
            widths={[200, 400]}
            sizes="(max-width: 768px) 50vw, 256px"
          />
        </div>
        <div class="md:w-2/3 text-center md:text-left">
          <h3 class="text-2xl font-bold font-heading text-brand-green mb-3">Vivienne King</h3>
          <p class="text-text-primary/90 text-base md:text-lg leading-relaxed mb-6">
            Vivienne King is founder of Impactful Places, an independent strategic advisory specialising in helping the real estate industry achieve its full impact potential.
          </p>
          <Button href="/leadership" variant="secondary" size="md">
            Learn More About Vivienne
          </Button>
        </div>
      </div>
    </div>
  </section>

</MainLayout>

<style>
  /* Simple text shadow for better readability on hero image */
  .text-shadow-md {
    text-shadow: 0 2px 4px rgba(0,0,0,0.3);
  }
</style>
