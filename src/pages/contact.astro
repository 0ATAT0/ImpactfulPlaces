---
// src/pages/contact.astro
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/Button.astro';

const pageTitle = "Contact Us | Impactful Places";
const pageDescription = "Get in touch with Impactful Places to discuss your ESG consultancy needs and how we can help you make a sustainable impact.";

const contactDetails = {
  email: "vivienne@impactfulplaces.co.uk"
  // Phone details removed as per request.
};
---
<MainLayout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <header class="text-center mb-12 md:mb-16 animate-on-scroll">
      <h1 class="text-4xl md:text-5xl font-bold font-heading text-brand-green mb-4">Let's Connect</h1>
      <p class="text-lg md:text-xl text-text-primary/80 max-w-2xl mx-auto">
        Ready to make an impact? Get in touch to discuss how we can help your organization achieve its ESG goals.
      </p>
    </header>

    <div class="text-center mt-4 mb-8 animate-on-scroll"> {/* Adjusted top margin from my-8 to mt-4 */}
      <Button href={`mailto:${contactDetails.email}`} variant="primary" size="lg" class="mx-auto">
        Get In Touch
      </Button>
    </div>
  </div>
</MainLayout>
