---
// src/pages/contact.astro
import MainLayout from '../layouts/MainLayout.astro';
import Button from '../components/Button.astro';

const pageTitle = "Contact Us | Impactful Places";
const pageDescription = "Get in touch with Impactful Places to discuss your ESG consultancy needs and how we can help you make a sustainable impact.";

const contactDetails = {
  email: "vivienne@impactfulplaces.co.uk",
  phone: "+44 771 3087781",
  phoneDisplay: "+44 771 3087781" // For display, original for tel: link
};
---
<MainLayout title={pageTitle} description={pageDescription}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12 md:py-16">
    <header class="text-center mb-12 md:mb-16 animate-on-scroll">
      <h1 class="text-4xl md:text-5xl font-bold font-heading text-brand-green mb-4">Let's Connect</h1>
      <p class="text-lg md:text-xl text-text-primary/80 max-w-2xl mx-auto">
        Ready to make an impact? Get in touch to discuss how we can help your organization achieve its ESG goals.
      </p>
    </header>

    <div class="max-w-4xl mx-auto grid md:grid-cols-2 gap-10 md:gap-16 items-start">
      {/* Contact Information Section */}
      <section class="space-y-6 animate-on-scroll" style="transition-delay: 100ms;">
        <h2 class="text-2xl md:text-3xl font-bold font-heading text-brand-green mb-6">Contact Information</h2>
        <div>
          <h3 class="text-lg font-semibold text-text-primary mb-1">Email</h3>
          <a href={`mailto:${contactDetails.email}`} class="text-text-primary hover:underline text-base md:text-lg break-all">
            {contactDetails.email}
          </a>
        </div>
        <div>
          <h3 class="text-lg font-semibold text-text-primary mb-1">Phone</h3>
          <a href={`tel:${contactDetails.phone.replace(/\s/g, '')}`} class="text-text-primary hover:underline text-base md:text-lg">
            {contactDetails.phoneDisplay}
          </a>
        </div>
        <div class="pt-4">
          <p class="text-text-primary/80 text-sm">
            We look forward to hearing from you and exploring how we can collaborate.
          </p>
        </div>
      </section>

      {/* Contact Form Section */}
      <section class="animate-on-scroll" style="transition-delay: 200ms;">
        <h2 class="text-2xl md:text-3xl font-bold font-heading text-brand-green mb-6">Send Us a Message</h2>
        {/* Form submission to be configured by human developer (e.g., Netlify Forms, Formspree) */}
        <form action="#" method="POST" class="space-y-6">
          <div>
            <label for="name" class="block text-sm font-medium text-text-primary mb-1">Full Name</label>
            <input type="text" name="name" id="name" autocomplete="name" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-brand-green focus:border-brand-green sm:text-sm" />
          </div>
          <div>
            <label for="email" class="block text-sm font-medium text-text-primary mb-1">Email Address</label>
            <input type="email" name="email" id="email" autocomplete="email" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-brand-green focus:border-brand-green sm:text-sm" />
          </div>
          <div>
            <label for="company" class="block text-sm font-medium text-text-primary mb-1">Company (Optional)</label>
            <input type="text" name="company" id="company" autocomplete="organization" class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-brand-green focus:border-brand-green sm:text-sm" />
          </div>
          <div>
            <label for="message" class="block text-sm font-medium text-text-primary mb-1">Message</label>
            <textarea id="message" name="message" rows="4" required class="mt-1 block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:ring-brand-green focus:border-brand-green sm:text-sm"></textarea>
          </div>
          <div>
            <Button variant="primary" size="lg" isSubmit={true} class="w-full md:w-auto">
              Send Message
            </Button>
          </div>
          <p class="text-xs text-gray-500 text-center md:text-left">
            {/* Form submission to be configured --> */}
            Note: Form submission functionality needs to be configured by a developer.
          </p>
        </form>
      </section>
    </div>
  </div>
</MainLayout>
